{
    "name": "pkerrigan/xray",
    "description": "A basic PHP instrumentation library for AWS X-Ray",
    "keywords": ["AWS", "X-Ray", "AWS X-Ray", "APM", "Tracing"],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Patrick Kerrigan",
            "homepage": "https://patrickkerrigan.uk/"
        }
    ],

    "require": {
        "php": "^5.6 | ^7 | ^8",
        "ext-json": "*",
        "ext-sockets": "*",
        "aws/aws-sdk-php": "^3",
        "psr/simple-cache": "^1",
        "psr/log": "^1.1.3",
        "paragonie/random_compat": ">=2"
    },

    "autoload": {
        "psr-4": {"Pkerrigan\\Xray\\": "src/"}
    },

    "autoload-dev": {
        "psr-4": {"Pkerrigan\\Xray\\": "tests/"}
    },

    "require-dev": {
        "phpunit/phpunit": "^4.8 | ^5.4 | ^6.5 | ^8.5.4",
        "php-coveralls/php-coveralls": "^2.1.0",
        "symfony/phpunit-bridge": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
